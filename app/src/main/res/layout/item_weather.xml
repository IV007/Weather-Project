<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:toola="http://schemas.android.com/apk/res-auto"
    android:paddingEnd="@dimen/tab_padding"
    android:paddingStart="@dimen/tab_padding"
    tools:background="@color/colorAccent"
    >

    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:src="@drawable/cloudy"
        />

    <TextView
        android:id="@+id/summaryLabel"
        tools:text="Cloudy meatballs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:textColor="@color/colorWhite"
        android:layout_toRightOf="@+id/iconImageView"
        android:layout_toEndOf="@+id/iconImageView"/>

    <TextView
        android:id="@+id/tempLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="57"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:layout_alignBaseline="@+id/summaryLabel"
        android:layout_alignBottom="@+id/summaryLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>