<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/weatherama_dialog_background"
    android:orientation="vertical"
    android:padding="@dimen/general_padding">

    <TextView
        android:id="@+id/titleTextView"
        style="@style/WeatheramaDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_between_texts"/>

    <TextView
        android:id="@+id/messageTextView"
        style="@style/WeatheramaDialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_between_texts"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_between_texts"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/negativeButton"
            style="@style/WeatheramaDialogNegativeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/positiveButton"
            style="@style/WeatheramaDialogPositiveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>